# yabai

# toggle float mode üôè¬†
alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:10

# switch between spaces
alt - w : yabai -m space --focus prev
alt - e : yabai -m space --focus next

# swap windows
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east

# change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# balance all windows
shift + alt - b : yabai -m space --balance

# move window accross spaces
shift + alt - w : yabai -m window --space prev; yabai -m space --focus prev
shift + alt - e : yabai -m window --space next; yabai -m space --focus next

# swap spaces horizontally and vertically
shift + alt - y : yabai -m space --mirror y-axis
shift + alt - x : yabai -m space --mirror x-axis

# rotate everything 
shift + alt - r : yabai -m space --rotate 270

# balance all windows (all windows takes the same space 
alt - r : yabai -m space --balance

# move windows in floating mode
ctrl + alt - l : yabai -m window --move rel:30:0
ctrl + alt - h : yabai -m window --move rel:-30:0
ctrl + alt - j : yabai -m window --move rel:0:30
ctrl + alt - k : yabai -m window --move rel:0:-30

# change master width
alt - 0x2B : ~/.config/skhd/resizeWindow.sh -h
alt - 0x2F : ~/.config/skhd/resizeWindow.sh -l

# change split height
# alt + shift - u : ~/.config/skhd/resizeWindow.sh -u
# alt + shift - d : ~/.config/skhd/resizeWindow.sh -d


# apps
alt - return : open -a "Kitty.app"
alt - 1 : open -a "Firefox.app"
alt - 2 : open -a "Telegram.app"
alt - 3 : open -a "Discord.app"
alt - 4 : open -a "Obsidian.app"
alt - 0 : open -a "Clock.app"



